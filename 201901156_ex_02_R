//conv.java

package conversion;
import java.util.Scanner;
public class conv{
    public static void cur_conv(){
        System.out.println("Select your input type");
        System.out.println("Press 1 for INR");
        System.out.println("Press 2 for DOLLAR");
        System.out.println("Press 3 for EURO");
        System.out.println("Press 4 for YEN");
        Scanner a = new Scanner(System.in);
        int num = a.nextInt();
        switch (num){
            case 1:
                System.out.println("Select your convertion type");
                System.out.println("Press 1 for DOLLAR");
                System.out.println("Press 2 for EURO");
                System.out.println("Press 3 for YEN");
