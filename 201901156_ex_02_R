                        float dol =(float)amt * (float)0.014;
                        System.out.println("Dollar "+dol);
                        break;
                    case 2:
                        float euro =(float)amt * (float)0.012;
                        System.out.println("Euro "+euro);
                        break;
                    case 3:
                        float yen = (float)amt * (float)1.43;
                        System.out.println("Japanese Yen "+yen);
                        break;
                    case 4:
                        float dol1 =(float)amt * (float)0.014;
                        System.out.println("Dollar "+dol1);
                        float euro1 =(float)amt * (float)0.012;
                        System.out.println("Euro "+euro1);
                        float yen1 = (float)amt * (float)1.43;
                        System.out.println("Japanese Yen "+yen1);
                        break;
                    default:
                        System.out.println("Looking like there is no match Try again");
                        System.exit(0);
                    break;
                }
            break;
