    public static void time_conv(int inp, int out,float time){
        float res;
        switch(inp){
            case 1:
                if(out == 1){
                    System.out.println("converted to hours "+time);
                }
                else 
                if(out == 2){
                    res =(float) time*60;
                    System.out.println("converted to minutes "+res);
                    }
                else 
                if(out == 3){
                    res =(float) time*3600;
                    System.out.println("converted to Seconds "+res);
                    }
                else{
                    System.out.println("Enter the proper input");
                }
            break;
        
            case 2:
                if(out == 1){
                    res = (float) (time/60);
                    System.out.println("converted to hours "+res);
                }
                else if(out == 2)
                    System.out.println("converted to minutes "+time);
                else if(out == 3){
                    res = (float) (time * 60);
                    System.out.println("converted to Seconds "+res);}
                else
                    System.out.println("Enter the proper input");
            break;
            case 3:
                if(out == 1){
                    res = (float) (time/3600);
                    System.out.println("converted to hours "+res);
                }
                else if(out == 2){
                    res = (float) (time / 60);
                    System.out.println("converted to minutes "+res);}
                else if(out == 3){
                    System.out.println("converted to Seconds "+time);}
                else
                    System.out.println("Enter the proper input");
            break; 
        }
    }
    public static void dist_conv(int a , int b, float c){
        float res;
        switch(a){
            case 1:
                if(b == 1){
                    System.out.println("converted to Kilometer "+c);
                }
                else 
                if(b == 2){
                    res =(float) (c*1000);
                    System.out.println("converted to meter "+res);
                    }
                else 
                if(b == 3){
                    res =(float) (c*0.621371);
                    System.out.println("converted to Miles "+res);
                    }
                else{
                    System.out.println("Enter the proper input");
                }
            break;
        
            case 2:
                if(b == 1){
                    res = (float) (c/1000);
                    System.out.println("converted to Kilometer "+res);
                }
                else if(b == 2)
                    System.out.println("converted to meter "+c);
                else if(b == 3){
                    res = (float) (c * 0.000621371);
                    System.out.println("converted to Miles "+res);}
                else
                    System.out.println("Enter the proper input");
            break;
            case 3:
                if(b == 1){
                    res = (float) (c*1.60934);
                    System.out.println("converted to Kilometer "+res);
                }
                else if(b == 2){
                    res = (float) (c * 1609.34);
                    System.out.println("converted to Metre "+res);}
                else if(b == 3){
                    System.out.println("converted to Miles "+c);}
                else
                    System.out.println("Enter the proper input");
            break; 
        }

    }
}

// test.java
import java.util.Scanner;
import conversion.*;
public class test {
    public static void main(String[] args) {
        conversion.conv obj = new conversion.conv();
        obj.cur_conv();
        System.out.println("If the input is in\nhours press 1\nminutes press 2\nseconds press 3");
        Scanner sc = new Scanner(System.in);
        int input = sc.nextInt();
        System.out.println("Output should be in \nhours press 1\nminutes press 2\nseconds press 3");
        int output = sc.nextInt();
        System.out.println("Enter the time need to be converted");
        float time = sc.nextFloat();
        obj.time_conv(input,output,time);
        System.out.println("If the input is in\nKM press 1\nMetre press 2\nMiles press 3");
        int input1 = sc.nextInt();
        System.out.println("Output should be in \nKM press 1\nMetre press 2\nMiles press 3");
        int output1 = sc.nextInt();
        System.out.println("Enter the distance need to be converted");
        float dist = sc.nextFloat();
        obj.dist_conv(input1,output1,dist);
    }
}
